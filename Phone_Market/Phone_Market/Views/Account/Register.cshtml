@model Phone_Market.Models.RegisterUserModel;

<div class="btn-group btn-group-toggle" data-toggle="buttons">
    <input type="radio" class="btn-check" name="options" id="userForm" checked>
    <label class="btn btn-secondary" for="userForm">User</label>
    <input type="radio" class="btn-check" name="options" id="artistForm">
    <label class="btn btn-secondary" for="artistForm">Artist</label>
    <input type="radio" class="btn-check" name="options" id="organizerForm">
    <label class="btn btn-secondary" for="organizerForm">Organizer</label>
</div>

<div class="page-header">
    <h1>Create Account</h1>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please enter your credentials</h3>
            </div>
            <div class="panel-body">

                <form asp-route="Register" autocomplete="off">
                    <fieldset>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input class="form-control" placeholder="UserName" asp-for="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input class="form-control" placeholder="FirstName" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input class="form-control" placeholder="LastName" asp-for="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input type="Email" class="form-control" placeholder="Email" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordVerification" class="form-label"></label>
                            <input type="password" class="form-control" placeholder="PasswordVerification" asp-for="PasswordVerification">
                            <span asp-validation-for="PasswordVerification" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Create Account</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
